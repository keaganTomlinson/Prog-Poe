@model Product

<h1>Create Product</h1>

@using (Html.BeginForm())
{
        <div class="form-group">
            <label>Name:</label>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label>Description:</label>
        @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label>Quantity:</label>
        @Html.TextBoxFor(m => m.Quantity, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Quantity, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
              <label>Type:</label>
              @Html.DropDownListFor(m => m.Type, new SelectList(new[] { "Incoming", "Outgoing","Storage" }), "-- Select Type --", new { @class = "form-control" })
             @Html.ValidationMessageFor(m => m.Type, "", new { @class = "text-danger" })
        </div>

    <div class="form-group">
        <label asp-for="DateExpected">Date Expected:</label>
        <input type="date" id="DateExpected" asp-for="DateExpected" class="form-control" value=m.DateExpected />
        <span asp-validation-for="DateExpected" class="text-danger"></span>
    </div>

    

  

        <button type="submit" class="btn btn-primary">Create</button>
}