<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - test8</title>
    <link rel="stylesheet" href="~/css/bootSwatchTheme.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/test8.styles.css" asp-append-version="true" />
</head>
<body>
    <header>



        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">


                <a class="navbar-brand" href="#">
                    <img src="~/lib/images/logo-no-background.png" alt="Farm Central Logo" width="100" height="41" class="">

                </a>

               

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" 
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>

                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                        <li class="nav-item">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a class="nav-link " asp-area="" asp-controller="Products" asp-action="Index">Products</a>
                            }
                        </li>
                        @{
                            bool isAdmin = (User.Identity.Name == "Admin@admin.com");
                            string temp = User.Identity.Name;
                        }

                        @if (isAdmin)
                        {
                            <a class="nav-link " id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
                        }



                    </ul>

                </div>
            </div>
            <partial name="_LoginPartial" />
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            made by : keagan tomlinson ,st10084431   
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
  
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.min.js" integrity="sha384-Y4oOpwW3duJdCWv5ly8SCFYWqFDsfob/3GkgExXKV4idmbt98QcxXYs9UoXAB7BZ" crossorigin="anonymous"></script>  <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
